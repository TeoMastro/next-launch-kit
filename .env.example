# Database
DATABASE_URL="postgresql://postgres:password123@localhost:5433/next_launch_kit"
# DATABASE_URL="postgresql://postgres:password123@localhost:5433/next_launch_kit_test" --> to run the test database.

# Next.js / Better Auth
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_SECRET=generate-with-openssl-rand-base64-32
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Comma-separated list of trusted origins (set to your production URL in production, e.g. https://yourdomain.com)
BETTER_AUTH_TRUSTED_ORIGINS=http://localhost:3000

# Development
NODE_ENV="development"

# Google smpt
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email-address
SMTP_PASSWORD=your-password #https://support.google.com/accounts/answer/185833
SMTP_FROM="Next launch kit"

# Google sign in
AUTH_GOOGLE_ID="client-id"
AUTH_GOOGLE_SECRET="google-secret"

# Stripe
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_MONTHLY=price_monthly_id
STRIPE_PRICE_ID_YEARLY=price_yearly_id
# Optional: Set a test clock ID to test subscription renewals/cancellations (leave empty for real-time)
STRIPE_TEST_CLOCK_ID=

# Use this to force nixpacks to use node 20 instead of 18, which is its default version. This is needed when deploying on coolify.
NIXPACKS_NODE_VERSION=20